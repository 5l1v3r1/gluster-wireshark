Summary: wireshark packet dissector for protocols used in gluster
Name: gluster-wireshark-plugin
Version: @PACKAGE_VERSION@
Release: 0%{?dist}
License: GPLv2
Group: Development/Tools

Source0: gluster-wireshark-plugin-@PACKAGE_VERSION@.tar.bz2

Buildroot: %{_tmppath}/%{name}-root
BuildRequires:	wireshark-devel
Requires: wireshark

%description
wireshark packet dissector for protocol used in gluster.

%prep
%setup -q

%build
%configure
make

%install
rm -rf $RPM_BUILD_ROOT
%make_install

rm -f $RPM_BUILD_ROOT%{_libdir}/wireshark/plugins/*/gluster.la

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root)
%doc README
%{_libdir}/wireshark/plugins/*/gluster.so


